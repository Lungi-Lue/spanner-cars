<p id="notice"><%= notice %></p>

<h1>Listing Shipping Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Line 1</th>
      <th>Line 2</th>
      <th>City</th>
      <th>Province</th>
      <th>Zip code</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shipping_addresses.each do |shipping_address| %>
      <tr>
        <td><%= shipping_address.line_1 %></td>
        <td><%= shipping_address.line_2 %></td>
        <td><%= shipping_address.city %></td>
        <td><%= shipping_address.province %></td>
        <td><%= shipping_address.zip_code %></td>
        <td><%= shipping_address.user %></td>
        <td><%= link_to 'Show', shipping_address %></td>
        <td><%= link_to 'Edit', edit_shipping_address_path(shipping_address) %></td>
        <td><%= link_to 'Destroy', shipping_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

