<p id="notice"><%= notice %></p>

<h1>Listing Product Meta Infos</h1>

<table>
  <thead>
    <tr>
      <th>Make</th>
      <th>Model</th>
      <th>Color</th>
      <th>Additional info</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_meta_infos.each do |product_meta_info| %>
      <tr>
        <td><%= product_meta_info.make %></td>
        <td><%= product_meta_info.model %></td>
        <td><%= product_meta_info.color %></td>
        <td><%= product_meta_info.additional_info %></td>
        <td><%= product_meta_info.product %></td>
        <td><%= link_to 'Show', product_meta_info %></td>
        <td><%= link_to 'Edit', edit_product_meta_info_path(product_meta_info) %></td>
        <td><%= link_to 'Destroy', product_meta_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

